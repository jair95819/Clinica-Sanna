@model CapaEntidad.entDiagnostico

@{
    ViewData["Title"] = "InsertarDiagnostico";
    Layout = "~/Views/Shared/_LayoutMedico.cshtml";
}

<h1>Insertar Diagnostico</h1>

<hr />
<form asp-action="InsertarDiagnostico">
    <div class="row">
        <div class="col-md-4">
            <h4>Medico Tratante</h4>
            <select asp-for="idMedico" asp-items="ViewBag.Medico" class="form-control">
                <option value="">Seleccione un Medico tratante</option>
            </select>
        </div>
    </div>

    <hr />
    <div class="row">
        <div class="col-md-6">
            <h4>Sintomas</h4>
            <input asp-for="sintomas" class="form-control"/>
        </div>
        <div class="col-md-6">
            <h4>Observaciones</h4>
            <input asp-for="observaciones" class="form-control" />
        </div>
    </div>

    <div class="form-group mt-4">
        <input type="submit" value="Registrar" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
