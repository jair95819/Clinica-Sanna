@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="Clinica SANNA" />
    <meta name="author" content="Julio" />
    <title>Clinica SANNA</title>

    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
    <link href="~/css/styles.css?v=@DateTime.Now.Ticks" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="sb-nav-fixed">
    <!-- Navbar -->
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle"><i class="fas fa-bars"></i></button>
        <a class="navbar-brand ps-1" href="@Url.Action("Index", "Home")">SANNA</a>

        <ul class="navbar-nav ms-auto me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Acciones de Julio</a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="#">Settings</a></li>
                    <li><a class="dropdown-item" href="#">Activity Log</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li><a class="dropdown-item" href="#">Logout</a></li>
                </ul>
            </li>
        </ul>
    </nav>

    <!-- Sidebar + Content -->
    <div id="layoutSidenav">
        <!-- Sidebar -->
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Menú</div>

                        <a class="nav-link" href="@Url.Action("Index","Home")">
                            <div class="sb-nav-link-icon"><i class="fas fa-home"></i></div>
                            Inicio
                        </a>

                        <a class="nav-link" href="@Url.Action("InsertarCita","MantenedorCita")">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Solicitar Cita
                        </a>

                        <a class="nav-link" href="@Url.Action("ListarCita","MantenedorCita")">
                            <div class="sb-nav-link-icon"><i class="fas fa-calendar-check"></i></div>
                            Mis Citas
                        </a>

                        <a class="nav-link" href="@Url.Action("ListarMedico","MantenedorMedico")">
                            <div class="sb-nav-link-icon"><i class="fas fa-user-md"></i></div>
                            Médicos
                        </a>

                        <a class="nav-link" href="@Url.Action("Perfil","Usuario")">
                            <div class="sb-nav-link-icon"><i class="fas fa-user"></i></div>
                            Perfil
                        </a>

                        <a class="nav-link" href="@Url.Action("VistaAmbulancia","Home")">
                            <div class="sb-nav-link-icon"><i class="fas fa-ambulance"></i></div>
                            Ambulancia
                        </a>

                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseAdministrador" aria-expanded="false" aria-controls="collapseAdministrador">
                            <div class="sb-nav-link-icon"><i class="fas fa-user-cog"></i></div>
                            Administrador
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>

                        <!-- Submenú de administrador -->
                        <div class="collapse" id="collapseAdministrador" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" href="#" onclick="cargarVistaParcial('@Url.Action("Index", "MantenedorMedico")')">Listar Médicos</a>
                                <a class="nav-link" href="#" onclick="cargarVistaParcial('@Url.Action("Index", "MantenedorEspecialidad")')">Listar Especialidades</a>
                                <a class="nav-link" href="#" onclick="cargarVistaParcial('@Url.Action("Index", "MantenedorSede")')">Listar Sedes</a>
                                <a class="nav-link" href="#" onclick="cargarVistaParcial('@Url.Action("Index", "MantenedorMetodoPago")')">Métodos de Pago</a>
                                <a class="nav-link" href="#" onclick="cargarVistaParcial('@Url.Action("Index", "MantenedorCiudad")')">Listar Ciudades</a>
                                <a class="nav-link" href="#" onclick="cargarVistaParcial('@Url.Action("Index", "MantenedorDepartamento")')">Listar Departamento</a>
                            </nav>
                        </div>
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Logged in as:</div>
                    Julio
                </div>
            </nav>
        </div>

        <!-- Content -->
        <div id="layoutSidenav_content">
            <main class="container mt-3">
                <!-- Contenedor para vistas parciales dinámicas -->
                <div id="contenedorVistaDinamica">
                    @RenderBody()
                </div>
            </main>
            <footer class="py-4 bg-light mt-3">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Clinica SANNA 2025</div>
                        <div>
                            <a href="#">Política de privacidad</a>
                            &middot;
                            <a href="#">Términos y condiciones</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/scripts.js"></script>

    <!-- Script AJAX para cargar vistas -->
    <script>
        function cargarVistaParcial(url) {
            $("#contenedorVistaDinamica").load(url);
        }
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
