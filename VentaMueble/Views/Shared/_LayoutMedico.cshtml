@using Microsoft.AspNetCore.Http
@{
    Layout = null;
    var nombreUsuario = Context.Session.GetString("NombreMedico") ?? "Invitado";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Clinica SANNA - Médico</title>
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
    <link href="~/css/styles.css?v=@DateTime.Now.Ticks" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="sb-nav-fixed">
    <!-- Navbar -->
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <button class="btn btn-link btn-sm" id="sidebarToggle"><i class="fas fa-bars"></i></button>
        <a class="navbar-brand ps-1" href="@Url.Action("Index", "Home")">SANNA</a>
        <ul class="navbar-nav ms-auto me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown">Opciones</a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="@Url.Action("CerrarSesion", "Cuenta")">Cerrar Sesión</a></li>
                </ul>
            </li>
        </ul>
    </nav>

    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Menú</div>
                        <a class="nav-link" href="@Url.Action("Index","DashboardMedico")">
                            <div class="sb-nav-link-icon"><i class="fas fa-home"></i></div>
                            Inicio
                        </a>
                        <a class="nav-link" href="@Url.Action("TurnosMedico","MantenedorTurnos")">
                            <div class="sb-nav-link-icon"><i class="fas fa-calendar"></i></div>
                            Turnos de Médico
                        </a>
                        <a class="nav-link" href="@Url.Action("ListarCita","MantenedorCita", new {tipo = "Medico"})">
                            <div class="sb-nav-link-icon"><i class="fas fa-calendar-check"></i></div>
                            Mis Citas
                        </a>
                        <a class="nav-link" href="@Url.Action("Diagnosticos","MantenedorDiagnostico")">
                            <div class="sb-nav-link-icon"><i class="fas fa-file-medical"></i></div>
                            Diagnósticos
                        </a>
                        <a class="nav-link" href="@Url.Action("Prescripciones","MantenedorPrescripcion")">
                            <div class="sb-nav-link-icon"><i class="fas fa-prescription"></i></div>
                            Prescripciones Médicas
                        </a>
                        <a class="nav-link" href="@Url.Action("Perfil", "MantenedorMedico")">
                            <div class="sb-nav-link-icon"><i class="fas fa-user"></i></div>
                            Perfil
                        </a>

                        <a class="nav-link" href="@Url.Action("CerrarSesion", "Cuenta")">
                            <div class="sb-nav-link-icon"><i class="fas fa-sign-out-alt"></i></div>
                            Cerrar Sesión
                        </a>
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Conectado como:</div>
                    @nombreUsuario
                </div>
            </nav>
        </div>

        <div id="layoutSidenav_content">
            <main class="container mt-3">
                <div id="contenedorVistaDinamica">
                    @RenderBody()
                </div>
            </main>
            <footer class="py-4 bg-light mt-3">
                <div class="container-fluid px-4">
                    <div class="d-flex justify-content-between small">
                        <div class="text-muted">© Clinica SANNA 2025</div>
                        <div>
                            <a href="#">Política de privacidad</a> · <a href="#">Términos</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/scripts.js">    </script>
    @RenderSection("Scripts", required: false)

</body>
</html>
