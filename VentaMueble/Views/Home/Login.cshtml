@{
    ViewData["Title"] = "Inicio de Sesión - Clínica SANNA";
}

<div class="container">
    <div class="login-container">
        <div class="login-header">
            <img src="https://example.com/logo.png" alt="Logo Clínica SANNA">
            <h3>Bienvenido a la Clínica SANNA</h3>
            <p>Por favor, ingresa tus credenciales para acceder a tu cuenta.</p>
        </div>

        <form method="post" asp-controller="Home" asp-action="Login">
            <div class="form-group">
                <label for="username" class="form-label">Usuario</label>
                <input type="text" class="form-control" id="username" name="username" required placeholder="Introduce tu usuario" />
            </div>
            <div class="form-group">
                <label for="password" class="form-label">Contraseña</label>
                <input type="password" class="form-control" id="password" name="password" required placeholder="Introduce tu contraseña" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Iniciar sesión</button>
            </div>

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger mt-3">
                    <strong>Error:</strong> @ViewBag.ErrorMessage
                </div>
            }
        </form>

        <div class="footer-links">
            <a href="@Url.Action("Register", "Home")">¿No tienes cuenta? Regístrate aquí</a>
            <p><a href="#">¿Olvidaste tu contraseña?</a></p>
        </div>
    </div>
</div>
