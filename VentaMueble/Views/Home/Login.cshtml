@{
    Layout = "_LayoutLogin";
}

<!-- Pills navs -->
<ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="tab-cliente" data-bs-toggle="pill" href="#pills-cliente" role="tab"
           aria-controls="pills-cliente" aria-selected="true">Cliente</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="tab-medico" data-bs-toggle="pill" href="#pills-medico" role="tab"
           aria-controls="pills-medico" aria-selected="false">Médico</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="tab-administrador" data-bs-toggle="pill" href="#pills-administrador" role="tab"
           aria-controls="pills-administrador" aria-selected="false">Administrador</a>
    </li>
</ul>
<!-- Pills navs -->
<!-- Pills content -->
<div class="tab-content-container">
    <div class="tab-content">
        <!-- Cliente Tab -->
        <div class="tab-pane fade show active" id="pills-cliente" role="tabpanel" aria-labelledby="tab-cliente">
            <div class="text-center mb-4">
                <h4 class="text-primary">Acceso para Clientes</h4>
                <p class="text-muted">Ingresa a tu cuenta para gestionar tus citas médicas</p>
            </div>
            <form>
                <!-- Email input -->
                <div class="form-outline mb-4">
                    <label class="form-label" for="clienteEmail">Email</label>
                    <input type="email" id="clienteEmail" class="form-control" />
                </div>
                <!-- Password input -->
                <div class="form-outline mb-4">
                    <label class="form-label" for="clientePassword">Contraseña</label>
                    <input type="password" id="clientePassword" class="form-control" />
                </div>
                <!-- Submit button -->
                <button type="submit" class="btn btn-primary w-100 mb-4">Iniciar Sesión como Cliente</button>
            </form>
        </div>

        <!-- Médico Tab -->
        <div class="tab-pane fade" id="pills-medico" role="tabpanel" aria-labelledby="tab-medico">
            <div class="text-center mb-4">
                <h4 class="text-success">Acceso para Médicos</h4>
                <p class="text-muted">Portal profesional para consultas y diagnósticos</p>
            </div>
            <form>
                <!-- Email input -->
                <div class="form-outline mb-4">
                    <input type="email" id="medicoEmail" class="form-control" />
                    <label class="form-label" for="medicoEmail">Email Profesional</label>
                </div>
                <!-- Password input -->
                <div class="form-outline mb-4">
                    <input type="password" id="medicoPassword" class="form-control" />
                    <label class="form-label" for="medicoPassword">Contraseña</label>
                </div>
                <!-- Submit button -->
                <button type="submit" class="btn btn-success w-100 mb-4">Acceso Profesional</button>
            </form>
        </div>

        <!-- Administrador Tab -->
        <div class="tab-pane fade" id="pills-administrador" role="tabpanel" aria-labelledby="tab-administrador">
            <div class="text-center mb-4">
                <h4 class="text-warning">Panel de Administración</h4>
                <p class="text-muted">Acceso restringido al sistema de gestión</p>
            </div>
            <form>
                <!-- Usuario input -->
                <div class="form-outline mb-4">
                    <input type="text" id="adminUsuario" class="form-control" />
                    <label class="form-label" for="adminUsuario">Usuario Administrador</label>
                </div>
                <!-- Password input -->
                <div class="form-outline mb-4">
                    <input type="password" id="adminPassword" class="form-control" />
                    <label class="form-label" for="adminPassword">Contraseña</label>
                </div>
                <!-- Submit button -->
                <button type="submit" class="btn btn-warning w-100 mb-4">Acceso Administrativo</button>
            </form>
        </div>
    </div>
</div>
<!-- Pills content -->