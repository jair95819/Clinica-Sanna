@{
    ViewData["Title"] = "Login";
}

<ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="tab-Paciente" data-bs-toggle="pill" href="#pills-Paciente" role="tab" aria-controls="pills-Paciente" aria-selected="true">Paciente</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="tab-Medico" data-bs-toggle="pill" href="#pills-Medico" role="tab" aria-controls="pills-Medico" aria-selected="false">Médico</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="tab-Admin" data-bs-toggle="pill" href="#pills-Admin" role="tab" aria-controls="pills-Admin" aria-selected="false">Administrador</a>
    </li>
</ul>

<div class="tab-content">
    <!-- Paciente Tab -->
    <div class="tab-pane fade show active" id="pills-Paciente" role="tabpanel" aria-labelledby="tab-Paciente">
        <form method="post">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="email" required />
            </div>
            <div class="form-group">
                <label for="password">Contraseña</label>
                <input type="password" class="form-control" id="password" name="password" required />
            </div>
            <button type="submit" class="btn btn-primary w-100">Iniciar Sesión</button>
        </form>
    </div>

    <!-- Médico Tab -->
    <div class="tab-pane fade" id="pills-Medico" role="tabpanel" aria-labelledby="tab-Medico">
        <form method="post">
            <div class="form-group">
                <label for="email">Email Profesional</label>
                <input type="email" class="form-control" id="email" name="email" required />
            </div>
            <div class="form-group">
                <label for="password">Contraseña</label>
                <input type="password" class="form-control" id="password" name="password" required />
            </div>
            <button type="submit" class="btn btn-success w-100">Acceder como Médico</button>
        </form>
    </div>

    <!-- Administrador Tab -->
    <div class="tab-pane fade" id="pills-Admin" role="tabpanel" aria-labelledby="tab-Admin">
        <form method="post">
            <div class="form-group">
                <label for="email">Usuario Administrador</label>
                <input type="text" class="form-control" id="email" name="email" required />
            </div>
            <div class="form-group">
                <label for="password">Contraseña</label>
                <input type="password" class="form-control" id="password" name="password" required />
            </div>
            <button type="submit" class="btn btn-warning w-100">Acceder como Administrador</button>
        </form>
    </div>
</div>
