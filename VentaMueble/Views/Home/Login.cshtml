@{
    Layout = "_LayoutLogin";
}

<!-- Pills navs -->
<ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="tab-Paciente" data-bs-toggle="pill" href="#pills-Paciente" role="tab"
           aria-controls="pills-Paciente" aria-selected="true">Paciente</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="tab-medico" data-bs-toggle="pill" href="#pills-medico" role="tab"
           aria-controls="pills-medico" aria-selected="false">Médico</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="tab-administrador" data-bs-toggle="pill" href="#pills-administrador" role="tab"
           aria-controls="pills-administrador" aria-selected="false">Administrador</a>
    </li>
</ul>
<!-- Pills navs -->
<!-- Pills content -->
<div class="tab-content-container">
    <div class="tab-content">

        @if (TempData["RegistroExitoso"] != null)
        {
            <div class="alert alert-success">
                @TempData["RegistroExitoso"]
            </div>
        }

        <!-- Paciente Tab -->
        <div class="tab-pane fade show active" id="pills-Paciente" role="tabpanel" aria-labelledby="tab-Paciente">
            <div class="text-center mb-4">
                <h4 class="text-primary">Acceso para Pacientes</h4>
                <p class="text-muted">Ingresa a tu cuenta para gestionar tus citas médicas</p>
            </div>
            <form asp-action="Login" method="post">
                <input type="hidden" name="Tipousuario" value="Paciente" />
                <div class="form-outline mb-4">
                    <label class="form-label" for="PacienteEmail">Email</label>
                    <input type="email" id="PacienteEmail" name="email" class="form-control" />
                </div>
                <div class="form-outline mb-4">
                    <label class="form-label" for="PacientePassword">Contraseña</label>
                    <input type="password" id="PacientePassword" name="password" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary w-100 mb-4">Iniciar Sesión como Paciente</button>
                <div class="text-center mt-3">
                    ¿No tienes cuenta?
                    <a href="@Url.Action("MostrarRegistro", "Home", new { tipo = "Paciente" })">Registrarse</a>
                </div>


            </form>
        </div>

        <!-- Médico Tab -->
        <div class="tab-pane fade" id="pills-medico" role="tabpanel" aria-labelledby="tab-medico">
            <div class="text-center mb-4">
                <h4 class="text-success">Acceso para Médicos</h4>
                <p class="text-muted">Portal profesional para consultas y diagnósticos</p>
            </div>
            <form asp-action="Login" method="post">
                <input type="hidden" name="Tipousuario" value="Medico" />
                <div class="form-outline mb-4">
                    <label class="form-label" for="medicoEmail">Email Profesional</label>
                    <input type="email" id="medicoEmail" name="email" class="form-control" />
                </div>
                <div class="form-outline mb-4">
                    <label class="form-label" for="medicoPassword">Contraseña</label>
                    <input type="password" id="medicoPassword" name="password" class="form-control" />
                </div>
                <button type="submit" class="btn btn-success w-100 mb-4">Acceso Profesional</button>
                <div class="text-center mt-3">
                    ¿No tienes cuenta?
                    <a href="@Url.Action("MostrarRegistro", "Home", new { tipo = "Medico" })">Registrarse</a>
                </div>


            </form>
        </div>

        <!-- Administrador Tab -->
        <div class="tab-pane fade" id="pills-administrador" role="tabpanel" aria-labelledby="tab-administrador">
            <div class="text-center mb-4">
                <h4 class="text-warning">Panel de Administración</h4>
                <p class="text-muted">Acceso restringido al sistema de gestión</p>
            </div>
            <form asp-action="Login" method="post">
                <input type="hidden" name="Tipousuario" value="Administrador" />
                <div class="form-outline mb-4">
                    <label class="form-label" for="adminUsuario">Usuario Administrador</label>
                    <input type="text" id="adminUsuario" name="email" class="form-control" />
                </div>
                <div class="form-outline mb-4">
                    <label class="form-label" for="adminPassword">Contraseña</label>
                    <input type="password" id="adminPassword" name="password" class="form-control" />
                </div>
                <button type="submit" class="btn btn-warning w-100 mb-4">Acceso Administrativo</button>

            </form>
        </div>
    </div>
</div>
<!-- Pills content -->
