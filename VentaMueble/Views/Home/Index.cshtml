@{
    ViewData["Title"] = "Inicio";
    var userName = "Julio";
}

<div class="container my-3">
    <!-- Hero Section -->
    <div class="row gx-4 gx-lg-5 align-items-center">
        <div class="col-lg-7">
            <img class="img-fluid rounded mb-4 mb-lg-0" src="~/assets/landing/reservar_cita.webp" alt="Imagen de citas médicas" />
        </div>
        <div class="col-lg-5">
            <h1 class="font-weight-light display-4">
                Nuestro mejor plan es cuidar tu salud y la
                de tu familia.
            </h1>
            <p class="lead">¡Por eso, ahora puedes reservar tus citas a través de nuestra web oficial!</p>
        </div>
    </div>
</div>

<!-- Card Section -->
<div class="container my-4">
    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="card h-100 text-center shadow-sm border-light">
                <div class="card-body d-flex flex-column justify-content-center">
                    <img src="~/assets/landing/fachada_sanna.png" alt="Logo de Sanna" class="rounded mb-4 img-fluid" />
                    <h5 class="card-title text-primary">Clínica Sanna, amamos tu salud</h5>
                    <p class="card-text">Accede a un servicio médico de calidad y confianza.</p>
                </div>
            </div>
        </div>
    </div>
</div>
