@{
    ViewData["Title"] = "Inicio";
    var userName = "Julio";
}

<div class="row gx-4 gx-lg-5 align-items-center my-3">
    <div class="col-lg-7"><img class="img-fluid rounded mb-4 mb-lg-0" src="~/assets/landing/reservar_cita.webp" alt="..." /></div>
    <div class="col-lg-5">
        <h1 class="font-weight-light">
            Nuestro mejor plan es cuidar tu salud y la
            de tu familia.
        </h1>
        <p>¡Por eso, ahora puedes reservar tus citas nuestra web oficial!</p>
        <a asp-controller="MantenedorCita" asp-action="InsertarCita" class="btn btn-primary">Separa tu cita</a>
    </div>
</div>
<!-- Call to Action-->
<div class="card text-white bg-secondary my-5 py-4 text-center">
    <div class="card-body"><p class="text-white m-0">This call to action card is a great place to showcase some important information or display a clever tagline!</p></div>
</div>
<!-- Cards -->
<div class="row my-4">
    <div class="col-md-4 mb-3">
        <div class="card h-100 text-center">
            <div class="card-body d-flex flex-column justify-content-center">
                <img src="~/assets/landing/Doctor-y-paciente.webp" alt="Doctor Icon" class="rounded mb-4" />
                <h5 class="card-title">Si eres Doctor, realiza tus diagnósticos y recetas médicas desde el sitio autorizado</h5>
                <a href="/Doctor/Login" class="btn btn-outline-primary mt-3">Iniciar Sesión</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card h-100 text-center">
            <div class="card-body d-flex flex-column justify-content-center">
                <img src="~/assets/landing/Administrador.jpg" alt="Admin Icon" class="rounded mb-5" />
                <h5 class="card-title">Si eres Administrador Web, inicia sesión aquí</h5>
                <a href="/Administrador/Login" class="btn btn-outline-secondary mt-3">Iniciar Sesión</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card h-100 text-center">
            <div class="card-body d-flex flex-column justify-content-center">
                <img src="~/assets/landing/fachada_sanna.png" alt="Sanna Icon" class="rounded mb-5" />
                <h5 class="card-title">Clínica Sanna, amamos tu salud</h5>
            </div>
        </div>
    </div>
</div>