@model CapaEntidad.entEspecialidad

@{
    Layout = "_LayoutAdministrador";
    ViewData["Title"] = "Editar Especialidad";
}

<h4 class="mt-4 mb-3">Editar datos de la especialidad</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="EditarEspecialidad" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input asp-for="EspecialidadID" type="hidden" />

            <div class="mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="Estado" class="form-check-input" />
                <label asp-for="Estado" class="form-check-label">Activo</label>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Guardar cambios</button>
            <a asp-action="ListarEspecialidad" class="btn btn-secondary ms-2">Cancelar</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
