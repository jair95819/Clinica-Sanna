@model CapaEntidad.entMedico

@{
    Layout = "_LayoutAdministrador";
    ViewData["Title"] = "Editar Médico";
}

<h4 class="mt-4 mb-3">Editar datos del médico</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="EditarMedico" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- MedicoID: Campo oculto -->
            <input asp-for="MedicoID" type="hidden" />

            <!-- Nombres -->
            <div class="mb-3">
                <label asp-for="Nombres" class="form-label"></label>
                <input asp-for="Nombres" class="form-control" />
                <span asp-validation-for="Nombres" class="text-danger"></span>
            </div>

            <!-- Apellidos -->
            <div class="mb-3">
                <label asp-for="Apellidos" class="form-label"></label>
                <input asp-for="Apellidos" class="form-control" />
                <span asp-validation-for="Apellidos" class="text-danger"></span>
            </div>

            <!-- Teléfono -->
            <div class="mb-3">
                <label asp-for="Telefono" class="form-label"></label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>

            <!-- Especialidad (Dropdown) -->
            <div class="mb-3">
                <label asp-for="EspecialidadID" class="form-label"></label>
                @Html.DropDownListFor(
                         model => model.EspecialidadID,
                         (SelectList)ViewBag.Especialidades,
                         "Seleccione una especialidad",
                         new { @class = "form-select" }
                         )
                <span asp-validation-for="EspecialidadID" class="text-danger"></span>
            </div>

            <!-- Estado -->
            <div class="form-check mb-3">
                <input asp-for="Estado" class="form-check-input" />
                <label asp-for="Estado" class="form-check-label">Activo</label>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <!-- Botones -->
            <button type="submit" class="btn btn-primary">Guardar cambios</button>
            <a asp-action="ListarMedico" class="btn btn-secondary ms-2">Cancelar</a>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial");
}
