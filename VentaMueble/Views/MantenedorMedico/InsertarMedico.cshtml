@model CapaEntidad.entMedico

@{
    Layout = "_LayoutAdministrador";
    ViewData["Title"] = "Insertar Médico";
}

<h4 class="mt-4 mb-3">Insertar Nuevo Médico</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="InsertarMedico" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Email -->
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="email" name="Email" class="form-control" required />
            </div>

            <!-- Contraseña -->
            <div class="mb-3">
                <label class="form-label">Contraseña</label>
                <input type="password" name="Password" class="form-control" required />
            </div>

            <!-- Nombres -->
            <div class="mb-3">
                <label asp-for="Nombres" class="form-label"></label>
                <input asp-for="Nombres" class="form-control" required />
                <span asp-validation-for="Nombres" class="text-danger"></span>
            </div>

            <!-- Apellidos -->
            <div class="mb-3">
                <label asp-for="Apellidos" class="form-label"></label>
                <input asp-for="Apellidos" class="form-control" required />
                <span asp-validation-for="Apellidos" class="text-danger"></span>
            </div>

            <!-- Teléfono -->
            <div class="mb-3">
                <label asp-for="Telefono" class="form-label"></label>
                <input asp-for="Telefono" class="form-control" required />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>

            <!-- Especialidad (Dropdown) -->
            <div class="mb-3">
                <label asp-for="EspecialidadID" class="form-label"></label>
                @Html.DropDownListFor(
                         model => model.EspecialidadID,
                         new SelectList(ViewBag.Especialidades as IEnumerable<SelectListItem>, "Value", "Text"),
                         "Seleccione una especialidad",
                         new { @class = "form-select", required = "required" }
                         )
                <span asp-validation-for="EspecialidadID" class="text-danger"></span>
            </div>

            <!-- Estado -->
            <div class="form-check mb-3">
                <input asp-for="Estado" class="form-check-input" />
                <label asp-for="Estado" class="form-check-label">Activo</label>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">Guardar</button>
            <a asp-action="ListarMedico" class="btn btn-secondary ms-2">Volver al listado</a>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial");
}
