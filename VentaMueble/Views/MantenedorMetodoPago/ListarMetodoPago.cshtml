@{
    ViewData["Title"] = "Métodos de Pago";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<h2 class="mb-4">Selecciona un Método de Pago</h2>

<div class="text-center mb-3">
    <button class="btn btn-outline-primary me-2" onclick="seleccionarMetodo('Efectivo')">Efectivo</button>
    <button class="btn btn-outline-success" onclick="seleccionarMetodo('Tarjeta')">Tarjeta</button>
</div>

<div id="resultado" class="text-center" style="display:none;">
    <h4>Has seleccionado: <span id="tipoSeleccionado" class="text-info"></span></h4>
    <div class="mt-3">
        <button class="btn btn-success me-2" onclick="realizarPago()">Realizar Pago</button>
        <button class="btn btn-danger" onclick="cancelarPago()">Cancelar Pago</button>
    </div>
</div>

@section Scripts {
    <script>
        function seleccionarMetodo(metodo) {
            document.getElementById("tipoSeleccionado").textContent = metodo;
            document.getElementById("resultado").style.display = "block";
        }

        function realizarPago() {
            alert(" Pago realizado con " + document.getElementById("tipoSeleccionado").textContent);
        }

        function cancelarPago() {
            document.getElementById("resultado").style.display = "none";
            document.getElementById("tipoSeleccionado").textContent = "";
        }
    </script>
}
